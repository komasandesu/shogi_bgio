{
  "json.schemaDownload.enable": true,
  "private": true,
  "workspaces": [
    "server",
    "lobby",
    "games/*"
  ],
  "scripts": {
    "dev": "run-p dev:*",
    "dev:server": "yarn workspace @bgio-typed-storybook/server dev",
    "dev:lobby": "yarn workspace @bgio-typed-storybook/lobby dev",

    "format": "run-s format:*",
    "format:server": "yarn workspace @bgio-typed-storybook/server format",
    "format:lobby": "yarn workspace @bgio-typed-storybook/lobby format",
    "format:shogi": "yarn workspace @bgio-typed-storybook/shogi_online format",
    "format:co_shogi": "yarn workspace @bgio-typed-storybook/co_shogi_online format"

  }
}
